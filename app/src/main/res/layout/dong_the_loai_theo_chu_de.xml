<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_background_home"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/framelayouttheloaitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageviewtheloaitheochude"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </FrameLayout>

        <TextView
            android:id="@+id/textviewtentheloaitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:maxWidth="200dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:text="@string/nhac_nhat_hot"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textviewtencasitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:text="@string/various_artist"
            android:textColor="@color/white"
            android:textSize="13sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>