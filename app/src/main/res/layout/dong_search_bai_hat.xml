<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="3dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        app:cardBackgroundColor="#C8676666"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/imageviewSearchluotthich"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/iconlove"
            app:tint="@color/white" />

        <TextView

            android:id="@+id/textviewsearchtenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="@string/dummy_tenbaihat"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textviewsearchcasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="40dp"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="@string/dummy_tencasi"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageviewSearchbaihat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>